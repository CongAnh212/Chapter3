<% provide(:title, 'Login') %>
<h1>Login</h1>
<div class="row justify-content-center">
  <div class="col-md-6">
    <%= form_with(url: login_path, scope: :session, local: true, class: "form-horizontal") do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
      </div>

      <div class="form-group mt-2">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
      </div>

      <div class="form-group">
        <%= f.submit "Login", class: "btn btn-primary btn-block mt-3 w-100" %>
      </div>

      <div>
        New user? <%= link_to 'Sign up now!', signup_path  %>
      </div>
    <% end %>
  </div>
</div>
