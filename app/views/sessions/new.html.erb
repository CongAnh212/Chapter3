<% provide(:title, 'Login') %>
<h1>Login</h1>
<div class="row justify-content-center">
  <div class="col-md-6">
    <%= form_with(url: login_path, scope: :session, local: true, class: "form-horizontal") do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
      </div>

      <div class="form-group mt-2">
        <%= f.label :password, class: "form-label" %>
        <%= link_to "(forgot password)", new_password_reset_path %>
        <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
      </div>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>

      <div class="form-group">
        <%= f.submit "Login", class: "btn btn-primary btn-block mt-3 w-100" %>
      </div>

      <div>
        New user? <%= link_to 'Sign up now!', signup_path %>
      </div>
    <% end %>
  </div>
</div>
