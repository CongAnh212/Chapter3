<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<div class="row justify-content-center">
  <div class="col-md-6">
    <%= form_with(model: @user, local: true, class: "form-horizontal") do |f| %>
      <%= render 'shared/error_messages', errors: @user.errors %>

      <div class="form-group">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Enter your name" %>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirmation", class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password" %>
      </div>

      <div class="form-group">
        <%= f.submit "Create my account", class: "btn btn-primary btn-block mt-3 w-100" %>
      </div>
    <% end %>
  </div>
</div>
